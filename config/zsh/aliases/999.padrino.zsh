# Padrino aliases

alias pd='padrino'
alias pdc='padrino console'  # Boots up the Padrino application irb console (alternatively use 'c').
alias pdg='padrino generate' # Executes the Padrino generator with given options (alternatively use 'gen' or 'g').
alias pdr='padrino rake'     # Execute rake tasks.
# alias pdrn='padrino runner'  # Run a piece of code in the Padrino application environment (alternatively use 'run' or 'r').
alias pds='padrino start'    # Starts the Padrino application (alternatively use 's').
alias pdst='padrino stop'    # Stops the Padrino application (alternatively use 'st').

