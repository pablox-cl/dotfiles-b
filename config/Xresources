Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

*font: xft:Meslo LG S DZ:style=Regular:size=9, \
       xft:Meslo LG S DZ for Powerline:style=RegularForPowerline:size=9, \
       xft:WenQuanYi Bitmap Song:size=9, \
       xft:unifont:style=Medium:antialias=false

*boldFont: xft:Meslo LG S DZ:style=Bold:size=9, \
           xft:WenQuanYi Bitmap Song:size=9, \
           xft:unifont:style=Medium:antialias=false

! not sure if this works
URxvt*italicFont:  xft:Bitstream Vera Sans Mono:italic:autohint=true:pixelsize=12
URxvt*boldItalicFont:  xft:Bitstream Vera Sans Mono:bold:italic:autohint=true:pixelsize=12


*foreground:  #dcdcdc
*background:  #000000

URxvt*cursorBlink:  true
URxvt*cursorColor:  #c1c9c9

URxvt*lineSpace:    2
URxvt*fading:       10%
URxvt*fadeColor:    grey
URxvt*scrollBar:    false

URxvt*urgentOnBell: true
URxvt*visualBell:   false

URxvt*perl-ext-common: default,matcher
URxvt*url-launcher:    /usr/bin/firefox
URxvt*matcher.button:  1

URxvt*intensityStyles: false

